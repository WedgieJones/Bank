@page 
@model BankStartWeb.Pages.Customerpages.CustomersModel
@{
}
<link href="/css/lib/font-awesome.min.css" rel="stylesheet">
    <link href="/css/lib/themify-icons.css" rel="stylesheet">
    <link href="/css/lib/menubar/sidebar.css" rel="stylesheet">
    <link href="/css/lib/bootstrap.min.css" rel="stylesheet">
    <link href="/css/lib/helper.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">

  <div class="content-wrap">
        <div class="main">
            <div class="container">
               
                <section id="main-content">
                    <div class="row ">
                        <div class="col-10">
                            <div class="card">
                                <div class="card-title">
                                    <h3>KundLista</h3>
                                </div>
                                <div class="bootstrap-data-table-panel">
                                    <div class="table-responsive">
                                        <table id="row-select" class="col-8 display table table-border table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Kundnummer</th>
                                                    <th><a asp-route-col="Givenname" asp-route-order="asc"  asp-route-searchWord="@Model.SearchWord" asp-page="/Customerpages/Customers"><i class='bx bx-sort-up'></i></a> 
                                                        Förnamn
                                                        <a asp-route-col="Givenname" asp-route-order="desc"  asp-route-searchWord="@Model.SearchWord" asp-page="/Customerpages/Customers"><i class='bx bx-sort-down'></i></a>
                                                    </th>
                                                    <th><a asp-route-col="surname" asp-route-order="asc"  asp-route-searchWord="@Model.SearchWord" asp-page="/Customerpages/Customers"><i class='bx bx-sort-up' ></i></a>
                                                        Efternamn
                                                        <a asp-route-col="surname" asp-route-order="desc"  asp-route-searchWord="@Model.SearchWord" asp-page="/Customerpages/Customers"><i class='bx bx-sort-down'></i> </a>
                                                    </th>
                                                    <th><a asp-route-col="nationalid" asp-route-order="asc"  asp-route-searchWord="@Model.SearchWord" asp-page="/Customerpages/Customers"><i class='bx bx-sort-up'></i> </a> 
                                                        Personnummer
                                                        <a asp-route-col="nationalid" asp-route-order="desc"  asp-route-searchWord="@Model.SearchWord" asp-page="/Customerpages/Customers"><i class='bx bx-sort-down'></i></a>
                                                    </th>
                                                    <th class="col">Adress</th>
                                                    <th></th>
                                                  @*  <th >Landskod</th>*@
                                                </tr>
                                            </thead>

                                            <tbody>
                                                 @foreach(var customer in Model.Customers)
                                                   {
                                                    <tr>
                                                           <td ><a asp-page="/CustomerPages/Customer" asp-route-customerId="@customer.Id">@customer.Id</a></td>
                                                           <td>@customer.Givenname</td>
                                                           <td>@customer.Surname</td>
                                                           <td>@customer.NationalId</td>
                                                           <td>@customer.Address</td>
                                                           <td></td>
                                                   </tr>
                                                     
                                                    }
                                                   
                                             </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>Kundnummer</th>
                                                    <th>Förnamn</th>
                                                    <th>Efternamn</th>
                                                    <th>Personnummer</th>
                                                    <th>Adress</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- /# card -->
                        </div>
                        <!-- /# column -->
                    </div>
                    <!-- /# row -->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="footer">
                                <p>2022 © Fredrik Swan. - <a href="#">example.com</a></p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>


    <script src="/js/lib/jquery.min.js"></script>
    <script src="/js/lib/jquery.nanoscroller.min.js"></script>
    <!-- nano scroller -->
    <script src="/js/lib/menubar/sidebar.js"></script>
    <script src="/js/lib/preloader/pace.min.js"></script>
