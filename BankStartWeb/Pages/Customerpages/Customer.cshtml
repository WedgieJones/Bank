                                  @foreach(var account in Model.Accounts)
                                  {
                                      <tr>
                                          <td>@account.AccountType</td>
                                          <td>@account.Id</td>
                                          <td>@account.Created</td>
                                          <td>@account.Balance</td>
                                          <td><a class="ctabutton" asp-page="/CustomerPages/Transactiondetals" asp-route-accountId="@account.Id">View</a> </td>
                                      </tr>
                                  }
                                 
                              </tr>
                              </tbody>
                          </table>
                      </div>
                  </div>
              </div>
              <!-- /# column -->
                  <div class="button-list"> 
